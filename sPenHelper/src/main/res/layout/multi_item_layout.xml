<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray"
        android:alpha="0.6"
        android:id="@+id/multi_bar_top"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/multi_row_container">

        <ImageView android:layout_weight="3.0"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:id="@+id/launcher_icon"
            android:padding="10dp"/>

        <TextView android:layout_weight="8.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/launcher_title"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <ImageView
            android:layout_weight="2.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/multi_item_remove"
            android:src="@drawable/ic_action_cancel"
            android:gravity="center"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:background="@drawable/selector_with_transparency"/>

        <ImageView
            android:layout_weight="2.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/multi_item_move"
            android:src="@drawable/ic_action_move"
            android:gravity="center"
            android:scaleType="centerInside"
            android:background="@drawable/selector_with_transparency"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"
        android:alpha="0.6"
        android:id="@+id/multi_bar_bottom"
        android:visibility="gone"/>

</RelativeLayout>
