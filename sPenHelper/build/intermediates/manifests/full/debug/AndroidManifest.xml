<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tushar.spen_helper"
    android:versionCode="51"
    android:versionName="2.8.3" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.tushar.spen_helper.MainActivity"
            android:label="@string/app_name"
            android:launchMode="standard" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.tushar.spen_helper.SPenService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibilityservice" />
        </service>

        <activity
            android:name="com.tushar.spen_helper.launchalot"
            android:icon="@drawable/applications"
            android:label="Select Application" >
        </activity>
        <activity android:name="com.tushar.spen_helper.Shortcuts" >
        </activity>
        <activity
            android:name="com.tushar.spen_helper.Actions"
            android:label="Select Action"
            android:theme="@style/Theme.Launcher" >
        </activity>

        <receiver
            android:name="com.tushar.spen_helper.BootReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="com.tushar.cm_spen.BUTTON_ACTIVATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.tushar.spen_helper.EditActivity"
            android:exported="true"
            android:label="Note Buddy" >
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.EDIT_CONDITION" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ipaulpro.afilechooser.FileChooserActivity"
            android:icon="@drawable/ic_chooser"
            android:label="@string/choose_file"
            android:theme="@android:style/Theme.Holo"
            android:uiOptions="splitActionBarWhenNarrow" />

        <receiver
            android:name="com.tushar.spen_helper.QueryReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.QUERY_CONDITION" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.tushar.spen_helper.HeadsetService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name="com.tushar.spen_helper.ExecuteAction"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name="com.tushar.spen_helper.Bhadva"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name="com.tushar.spen_helper.LauncherActivity"
            android:enabled="true"
            android:excludeFromRecents="true"
            android:exported="true"
            android:label="@string/title_activity_launcher"
            android:theme="@style/Theme.Launcher" >
        </activity>
        <activity
            android:name="com.tushar.spen_helper.Blacklist"
            android:label="@string/title_activity_blacklist" >
        </activity>

        <receiver
            android:name="com.tushar.spen_helper.DeviceAdmin"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN" >
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/dev_admin" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.tushar.spen_helper.IconTheme"
            android:label="@string/title_activity_icon_theme" >
        </activity>
        <activity
            android:name="com.tushar.spen_helper.AutoLaunchActivity"
            android:label="@string/title_activity_auto_launch" >
        </activity>
    </application>

</manifest>